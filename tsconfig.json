{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "expo",
      "react",
      "react-native"
    ]
  },
  "include": [
    "app",
    "src",
    "index.js",
    "index.ts",
    "index.tsx",
    "App.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
